__lua__
function _init()
	cls()
	pi = 3.14159
	dt = 1 / 30

	amp = 16
	len = 1
	frq = .5
	pos = {x = 0, y = 64}

	cur_frq = 0
end

function _update()
	if pos.x >= 128 then 
		pos.x = 0
		cls()
	end	
end

function _draw()
	wave()
	--fixed_wave()
end
-->8
function wave()
	pos.x += 1
	cur_frq = (cur_frq + (frq * dt)) % (pi * 2)
	
	local wave_y = sin((pos.x * len) + cur_frq) * amp

	pset(pos.x, wave_y + pos.y, flr(rnd(15)) + 1)
end

function fixed_wave()
	for t = 0, pi, dt do
		local wave_y = sin(t) * amp

		pset((t * 30) + pos.x, wave_y + pos.y, 6)
	end
end
